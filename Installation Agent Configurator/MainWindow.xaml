<Window x:Class="Installation_Agent_Configurator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        mc:Ignorable="d"
        Title="MainWindow" Height="584" Width="1164">
    <Grid Background="#FFF2F2F2" Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>
        <Grid Name="InnerGrid" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="6*"/>
                <ColumnDefinition Width="6*" />
            </Grid.ColumnDefinitions>
            <ui:NavigationView Grid.Row="0" PaneDisplayMode="Left" ui:IsBackButtonVisible="Collapsed" ui:IsPaneToggleButtonVisible="True">
                <ui:NavigationView.AutoSuggestBox>
                    <ui:AutoSuggestBox x:Name="AutoSuggestBoxSearchExecutables" PlaceholderText="Search" QueryIcon="Find" >

                    </ui:AutoSuggestBox>
                </ui:NavigationView.AutoSuggestBox>
                <ui:NavigationView.MenuItems>
                    <ui:NavigationViewItem Content="Executables" Icon="AllApps"/>
                    <ui:NavigationViewItem Content="Deployment" Icon="Upload"/>
                </ui:NavigationView.MenuItems>
            </ui:NavigationView>
            
            <ListBox  Grid.Column="1" IsSynchronizedWithCurrentItem="True">

            </ListBox>
            <Border Grid.Column="2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="50"/>
                    </Grid.RowDefinitions>
                    <Border Background="#FFEAEAEA" >
                        
                    </Border>
                    <Border Grid.Row="1" Background="#FFEAEAEA"  >
                        <TabControl
                            x:Name="TabView4"
                            SelectedIndex="0"
                            MinWidth="4"
                            MinHeight="0">
                            <TabControl.Items>
                                <TabItem Header="CMD Prompt">
                                    <ui:TabItemHelper.Icon>
                                        <ui:BitmapIcon UriSource="/Assets/TabViewIcons/cmd.png" ShowAsMonochrome="False" />
                                    </ui:TabItemHelper.Icon>
                                </TabItem>
                                <TabItem Header="Powershell">
                                    <ui:TabItemHelper.Icon>
                                        <ui:BitmapIcon UriSource="/Assets/TabViewIcons/powershell.png" ShowAsMonochrome="False" />
                                    </ui:TabItemHelper.Icon>
                                </TabItem>
                                <TabItem Header="Windows Subsystem for Linux">
                                    <ui:TabItemHelper.Icon>
                                        <ui:BitmapIcon UriSource="/Assets/TabViewIcons/linux.png" ShowAsMonochrome="False" />
                                    </ui:TabItemHelper.Icon>
                                </TabItem>
                                <TabItem Header="Windows Subsystem for Linux">
                                    <ui:TabItemHelper.Icon>
                                        <ui:BitmapIcon UriSource="/Assets/TabViewIcons/linux.png" ShowAsMonochrome="False" />
                                    </ui:TabItemHelper.Icon>
                                </TabItem>
                                
                            </TabControl.Items>
                        </TabControl>
                    </Border>
                    <Grid Grid.Row="2" >
                        <Border Padding="10" Background="#FFEAEAEA">


                        </Border>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
        <StatusBar Grid.Row="1">
            <Label Content="Service: " HorizontalAlignment="Center" FontFamily="Bahnschrift"/>
        </StatusBar>

    </Grid>
</Window>