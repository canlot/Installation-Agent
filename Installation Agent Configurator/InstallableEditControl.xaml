<UserControl x:Class="Installation_Agent_Configurator.InstallableEditControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Installation_Agent_Configurator"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ui:CommandBar HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="0" Margin="5">
            <ui:AppBarButton Icon="Add" Label="New Unit" />
            <ui:AppBarButton Icon="Copy" Label="Copy Unit"/>
            <ui:AppBarButton Icon="Delete" Label="Delete Unit" />
        </ui:CommandBar>
        <DataGrid Grid.Row="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Order"/>
                <DataGridTextColumn Header="Name" />
            </DataGrid.Columns>
            <DataGrid.Items>

            </DataGrid.Items>
        </DataGrid>
    </Grid>
</UserControl>
