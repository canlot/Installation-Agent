<Window x:Class="Installation_Agent.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        xmlns:local="clr-namespace:Installation_Agent"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="1000" Closing="Window_Closing" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <ui:NavigationView Grid.Column="0" Grid.Row="0" PaneDisplayMode="Left">
            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem Content="Apps"/>
                <ui:NavigationViewItem Content="Scripts"/>
            </ui:NavigationView.MenuItems>
        </ui:NavigationView>
        <ListBox Grid.Column="1" Grid.Row="0" x:Name="ListBoxJobs" ItemsSource="{Binding Scripts}">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="HorizontalContentAlignment"
                        Value="Stretch"/>
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="5*"/>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0" Margin="15" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" x:Name="ButtonInstallSoftware" Click="ButtonInstallSoftware_Click"  >
                            <Image Source="install-line.png" Height="20" Width="20" Stretch="Uniform"/>
                        </Button>
                        <Button Grid.Column="1" Margin="15" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" x:Name="ButtonUninstallSoftware">
                            <Image Source="delete-bin-5-line.png" Height="20" Width="20" Stretch="Uniform"/>
                        </Button>
                        <Label Grid.Column="2" Margin="15" Content="{Binding Name}" VerticalContentAlignment="Center" x:Name="LabelExecutableName" />
                        <!--<ComboBox Grid.Column="3" Margin="15" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" x:Name="ComboBoxVersions" ItemsSource="{Binding Versions}"/>-->
                        <ui:ProgressRing Grid.Column="4" IsActive="False" />
                        <Image Grid.Column="5"></Image>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
